{
  "mcpServers": {
    "tableau": {
      "command": "/path/to/node",
      "args": ["/path/to/tableau-mcp/build/index.js"],
      "env": {
        "TRANSPORT": "stdio",
        "SERVER": "https://your-server.tableau.com",
        "AUTH": "direct-trust",
        "SITE_NAME": "yoursite",
        "PAT_NAME": "YourPATName",
        "PAT_VALUE": "YOUR_TABLEAU_PERSONAL_ACCESS_TOKEN",
        "CONNECTED_APP_CLIENT_ID": "your-connected-app-client-id",
        "CONNECTED_APP_SECRET_ID": "your-connected-app-secret-id",
        "CONNECTED_APP_SECRET_VALUE": "your-connected-app-secret-value",
        "JWT_SUB_CLAIM": "your-email@example.com",
        "DATASOURCE_CREDENTIALS": "",
        "DEFAULT_LOG_LEVEL": "debug",
        "INCLUDE_TOOLS": "",
        "EXCLUDE_TOOLS": "",
        "MAX_RESULT_LIMIT": "",
        "DISABLE_QUERY_DATASOURCE_VALIDATION_REQUESTS": "",
        "DISABLE_METADATA_API_REQUESTS": "",
        "DANGEROUSLY_DISABLE_OAUTH": "true"
      }
    }
  }
}
